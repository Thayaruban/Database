

    <%- include ('../partials/header.ejs'); -%> 
    <%- include ('../partials/topbarAdmin.ejs'); -%> 
    <%- include ('../partials/sidebarAdmin.ejs'); -%> 
    
    <div class="container-fluid">
        <div class="row">
            
            <main class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2"><i class="fa fa-users fa-fw" aria-hidden="true"></i> Manage Custom Attributes</h1>
                 
                </div>
        
                <div class=" justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <nav class="breadcrumb" aria-label="breadcrumb">
                      <ol class="breadcrumb ">
                      <a class="nav-link" href="#"><li class="breadcrumb-item bread"><i class="fa fa-home fa-fw" aria-hidden="true"></i>&nbsp Home &nbsp >></li></a>
                      <li class="breadcrumb-item bread"><i class="fa fa-users fa-fw" aria-hidden="true"></i>&nbsp Custom Attributes </li>
                      <li class="breadcrumb-item bread"><i class="fa fa-user-secret fa-fw" aria-hidden="true"></i>&nbsp View Custom Attributes</li>
                      </ol>
                    </nav>
                  </div>
                  <div class="col-lg-12 table-responsive">
                  <table class="table caption-top table-hover ">
                      <caption>List of Custom Attributes</caption]>
                      <br>
                      <caption><span>Search</span>&nbsp <input type="search" class="search_table" name="search_table" placeholder="Search"></caption]>
                      <thead class="table-primary">
          
                        <td>AttributeName</td>
                        <td>defaultValue</td>
                        <td></td>
                        <td></td>
                        
          
                      <thead>
          
                      <tbody>
                        <% for (let attribute of attributes){%>
                        <tr>
                          <td><%= attribute.attributeName %></td>
                          <td><%= attribute.defaultValue%></td>
                          <td><a href="/admin/viewCustomAttribute/edit/<%=attribute.idcustomAttributes%>"> <i class="fa fa-edit fa-fw" aria-hidden="true"></i></a></td</td>
                          <td>
                            <form action='/admin/viewCustomAttribute/delete/<%=attribute.idcustomAttributes%>' method="POST">
                                <button class="fa fa-trash fa-fw"></button>
                            </form>
                              </td</td>
                         
                        </tr>
                        <%} %>
                      </tbody>
          
                     
          
                  </table>
                  </div>
                
                
              </main>

        </div>
    </div>



